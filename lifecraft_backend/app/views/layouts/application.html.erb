<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Lifecraft</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="active"><a href="index">Home</a></li>
          <li><a href="about">About</a></li>
          <!--
          <li><a href="#contact">Contact</a></li>
          -->
        </ul>

        <form class="nav signin pull-right">
          <input class="email-address span3" type="email" placeholder="Email address">
          <button class="btn btn-danger">Sign in</button>
        <form>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

<div class="container">

<div id="yield">
<%= yield %>
</div>

<hr />
<footer>
  <p>&copy; Team Hyphen Underscore Hyphen 2012</p>
</footer>

</div> <!-- /container -->

<script id="user-info-template" type="text/x-jquery-tmpl">
<ul class="nav userinfo pull-right">
  <li><a>${email}</a></li>
  <li class="divider-vertical"></li>
  <li><a href="#" class="signout">Sign out</a></li>
<ul>
</script>

<script id="quest-template" type="text/x-jquery-tmpl">
<div class="quest span4 well">
  <h2>${title}</h2>
  <p>${description}</p>
</div>
</script>

<%= javascript_include_tag "bootstrap" %>

</body>
